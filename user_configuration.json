{
    "additional-repositories": [],
    "archinstall-language": "English",
    "audio_config": {
        "audio": "pulseaudio"
    },
    "bootloader": "Systemd-boot",
    "config_version": "2.8.6",
    "custom-commands": [
        "git clone https://github.com/pentestfunctions/hypervarch.git /home/robot/hypervarch",
        "mkdir -p /home/robot/Pictures",
        "mkdir -p /home/robot/.config/xfce4/terminal",
        "cp /home/robot/hypervarch/scripts/resources/background.png /home/robot/Pictures/background.png",
        "cp /home/robot/hypervarch/scripts/resources/background.bmp /etc/background.bmp",
        "wget https://github.com/dracula/gtk/archive/master.zip -O /tmp/master.zip",
        "unzip -o /tmp/master.zip -d /tmp/master",
        "mv /tmp/master/gtk-master /usr/share/themes/Dracula",
        "rm /tmp/master.zip",
        "wget https://github.com/dracula/gtk/files/5214870/Dracula.zip -O /tmp/Dracula.zip",
        "unzip -o /tmp/Dracula.zip -d /usr/share/icons",
        "rm /tmp/Dracula.zip",
        "cp /home/robot/hypervarch/scripts/resources/terminalrc /home/robot/.config/xfce4/terminal/terminalrc",
        "cp /home/robot/hypervarch/scripts/resources/bashrc /home/robot/.bashrc",
        "cp /home/robot/hypervarch/scripts/resources/xfce4-panel-settings.tar.gz /tmp/",
        "tar -xzf /tmp/xfce4-panel-settings.tar.gz -C /home/robot/.config/xfce4/panel/",
        "chown -R robot:robot /home/robot",
        "rm /usr/share/wayland-sessions/gnome-wayland.desktop 2>/dev/null || true",
        "rm /usr/share/wayland-sessions/gnome.desktop 2>/dev/null || true",
        "touch /usr/share/wayland-sessions/test.file",
        "rm /usr/share/xsessions/gnome* 2>/dev/null || true"
    ],
    "debug": false,
    "disk": {
        "device": "/dev/sda",
        "partitions": [
            {
                "mountpoint": "/boot",
                "size": "1GiB",
                "type": "primary",
                "filesystem": "fat32",
                "bootable": true
            },
            {
                "mountpoint": "/",
                "size": "100%",
                "type": "primary",
                "filesystem": "btrfs",
                "mountOptions": ["compress=zstd"],
                "subvolumes": [
                    {"name": "@", "mountpoint": "/"},
                    {"name": "@home", "mountpoint": "/home"},
                    {"name": "@log", "mountpoint": "/var/log"},
                    {"name": "@pkg", "mountpoint": "/var/cache/pacman/pkg"},
                    {"name": "@.snapshots", "mountpoint": "/.snapshots"}
                ]
            }
        ]
    },
    "hostname": "archlinux",
    "kernels": ["linux"],
    "locale_config": {
        "kb_layout": "us",
        "sys_enc": "UTF-8",
        "sys_lang": "en_US"
    },
    "network_config": {
        "type": "iso"
    },
    "ntp": true,
    "packages": [
        "git",
        "unzip",
        "firefox",
        "lolcat",
        "rustscan",
        "nmap",
        "inetutils",
        "xfce4-terminal"
    ],
    "profile_config": {
        "gfx_driver": "All open-source",
        "greeter": "gdm",
        "profile": {
            "custom_settings": {
                "Xfce4": {}
            },
            "details": ["Xfce4"],
            "main": "Desktop"
        }
    },
    "script": "guided",
    "swap": true,
    "timezone": "UTC",
    "uki": false
}
